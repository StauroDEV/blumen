{
  "compilerOptions": {
    "module": "Node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowJs": false,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "isolatedModules": true,
  },
  "exclude": ["node_modules", "**/node_modules/*","**/*.test.ts"],
  "include": ["src"]
}
