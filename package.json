{
  "name": "blumen",
  "version": "0.1.1",
  "description": "ðŸŒ¸ Self-custodial decentralized deployments",
  "type": "module",
  "bin": {
    "blumen": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/StauroDEV/blumen.git"
  },
  "homepage": "https://github.com/StauroDEV/blumen",
  "scripts": {
    "build": "bun build src/cli.ts --outfile dist/out.js --target node --bundle",
    "postbuild": "esbuild dist/out.js --format=esm --tree-shaking --outfile=dist/cli.js && rm dist/out.js && chmod +x ./dist/cli.js",
    "prepublishOnly": "bun run build && bun size-limit",
    "lint": "biome check",
    "types": "tsc --noEmit",
    "test:report": "bun test --coverage --coverage-reporter=lcov"
  },
  "keywords": [
    "ipfs",
    "filecoin",
    "deploy",
    "cli"
  ],
  "files": [
    "dist"
  ],
  "author": "v1rtl <hi@v1rtl.site>",
  "engineStrict": true,
  "engines": {
    "node": "^20.10.0 || >=21.1.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@ipld/car": "^5.4.2",
    "@ipld/dag-cbor": "^9.2.4",
    "@ipld/dag-ucan": "^3.4.5",
    "@ipld/unixfs": "^3.0.0",
    "@size-limit/file": "^11.2.0",
    "@stauro/filebase-upload": "^1.0.1",
    "@types/bun": "^1.2.19",
    "@types/node": "^22.17.0",
    "@types/varint": "^6.0.3",
    "@ucanto/client": "^9.0.1",
    "@ucanto/core": "^10.4.0",
    "@ucanto/principal": "^9.0.2",
    "@ucanto/transport": "^9.2.0",
    "ascii-bar": "^1.0.3",
    "esbuild": "^0.25.8",
    "multiformats": "~13.3.7",
    "nanotar": "^0.2.0",
    "ox": "^0.8.7",
    "p-retry": "^6.2.1",
    "semantic-release": "^24.2.7",
    "size-limit": "^11.2.0",
    "spektr": "^0.2.0",
    "tinyglobby": "^0.2.14",
    "typescript": "^5.9.2",
    "varint": "^6.0.0"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "provenance": true
  },
  "size-limit": [
    {
      "path": "dist/cli.js",
      "limit": "920KB",
      "brotli": false
    }
  ]
}
